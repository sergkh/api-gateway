# security: []
# parameters:
#   - name: provider
#     in: path
#     schema:
#       type: string
#     required: true
#     description: provider identifier
###
GET           /auth/:provider                                     @controllers.AuthController.authenticate(provider)

###
# summary: Returns user information
# tags:
#   - Users
# operationId: getUser
# security:
#   - api_key: []
#   - oauth: ['read:users']
# parameters:
#   - name: userId
