###
# summary: List Discovered services
# tags:
#   - System
# operationId: getDiscoveredServices
# security:
#   - api_key: ['swagger:read']
#   - oauth: ['swagger:read']
# responses:
#   200:
#     description: Services list
#     content:
#       application/json:
#         schema:
#           type: object
#           properties:
#             items:
#               type: array
#               items:
#                 type: object
#                 properties:
#                   name:
#                     type: string
#                     description: Service Name
#                   pattern:
#                     type: string
#                     description: Service routing pattern
#                   basePath:
#                     type: string
#                     description: Service Base Path
#                   swaggerUrl:
#                     type: string
#                     description: Service Swagger URL
#             count:
#               type: integer
#               format: int64
#               description: Count
###
GET           /discovery/services                                 @controllers.ProxyController.listServices

